<%= render "layouts/decidim/application" do %>
  <main class="wrapper">
    <div class="row collapse">
      <div class="columns">
        <h1 class="heading1 user-header"><%= t("title", scope: "layouts.decidim.user_profile") %></h1>
      </div>
    </div>
    <div class="row collapse">
      <div class="main-container">
        <div class="row collapse main-container--side-panel">
          <div class="columns medium-4 large-3">
            <div class="side-panel">
              <ul class="tabs vertical side-panel__tabs" id="user-settings-tabs">
   

<li class="tabs-title is-active"><a href="/account"><%= t("decidim.gestione_nickname") %></a></li>
<li class="tabs-title"><a href="/notifications_settings"><%= t("notifications_settings", scope: "layouts.decidim.user_profile") %></a></li>
<!--<li class="tabs-title"><a href="/authorizations">Autorizzazioni</a></li>-->
<li class="tabs-title"><a href="/user_interests"><%= t("my_interests", scope: "layouts.decidim.user_profile") %></a></li>
<li class="tabs-title"><a href="/data_portability"><%= t("my_data", scope: "layouts.decidim.user_profile") %></a></li>
<!--<li class="tabs-title"><a href="/account/delete">Cancella il mio account</a></li>-->



                 <%#= user_menu.render %>
              </ul>
            </div>
          </div>
          <div class="columns medium-8 large-9">
            <div class="main-container__content">
              <div class="tabs-content vertical" aria-hidden="false">                
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<% end %>

<%= javascript_tag defer: 'defer' do -%>
	$(function(){
	    var url = window.location.href;
	    $("#user-settings-tabs a").each(function() {
	        $(this).closest("li").removeClass("is-active");
	    });
	    $("#user-settings-tabs a").each(function() {
	        if(url == (this.href)) { 
	            $(this).closest("li").addClass("is-active");
	        }
	    });
	});
<% end -%>
